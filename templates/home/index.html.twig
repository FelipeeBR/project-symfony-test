{% extends 'base.html.twig' %}

{% block title %}Página Inicial{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h3>Bem Vindo(a)</h3>
        <div class="d-flex gap-2 justify-content-center"> 
            <a href="{{ path('farm_index') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Gerenciar Fazendas
            </a>

            <a href="{{ path('cow_index') }}" class="btn btn-warning">
                <i class="fas fa-plus me-1"></i> Gerenciar Gados
            </a>

            <a href="{{ path('veterinarian_index') }}" class="btn btn-success">
                <i class="fas fa-plus me-1"></i> Gerenciar Veterinários
            </a>

            <a href="{{ path('cow_slaughter') }}" class="btn btn-secondary">
                <i class="fas fa-plus me-1"></i> Animais para o Abate
            </a>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-center">Leite</h5>
                    <p class="card-text text-center">Total de leite produzido por semana</p>
                    <h3 class="text-center">{{ totalMilk }} Litros</h3>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-center">Ração</h5>
                    <p class="card-text text-center">Total de ração consumida por semana</p>
                    <h3 class="text-center">{{ totalFood }} kgs</h3>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-center">Quantidade</h5>
                    <p class="card-text text-center">Animais até 1 ano e 500Kg+ de ração por semana</p>
                    <h3 class="text-center">{{ totalCowAndFood.total_animals }}</h3>
                    <a href="" class="btn btn-primary">Relatório</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}