{% extends 'base.html.twig' %}

{% block title %}Fazenda {{ farm.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h2">
            <i class="fas fa-cow me-2"></i>Detalhes da fazenda: {{ farm.name }}
        </h1>
        <div class="d-flex justify-content-end mb-3 gap-2">
            <a href="{{ path('farm_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <a href="{{ path('farm_edit', {'id': farm.id}) }}" class="btn btn-success btn-sm">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            {{ include('farm/_delete_form.html.twig') }}
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25 bg-light">ID</th>
                            <td>{{ farm.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Nome</th>
                            <td><strong>{{ farm.name }}</strong></td>
                        </tr>
                        <tr>
                            <th class="bg-light">Tamanho (HA)</th>
                            <td>{{ farm.size|number_format(2, ',', '.') }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Respons√°vel</th>
                            <td>{{ farm.responsible|number_format(2, ',', '.') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
