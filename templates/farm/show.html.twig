{% extends 'base.html.twig' %}

{% block title %}Fazenda {{ farm.id }}{% endblock %}

{% block body %}
    <h1>Fazenda {{ farm.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ farm.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ farm.name }}</td>
            </tr>
            <tr>
                <th>Tamanho</th>
                <td>{{ farm.size }}</td>
            </tr>
            <tr>
                <th>Responsavel</th>
                <td>{{ farm.responsible }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('farm_index') }}">Voltar</a>

    <a href="{{ path('farm_edit', {'id': farm.id}) }}">Editar</a>

    {{ include('farm/_delete_form.html.twig') }}
{% endblock %}
