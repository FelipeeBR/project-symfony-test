{% extends 'base.html.twig' %}

{% block title %}Veterinario {{ veterinarian.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h2">
            <i class="fas fa-cow me-2"></i>Informações do veterinário: {{ veterinarian.name }}
        </h1>
        <div class="d-flex justify-content-end mb-3 gap-2">
            <a href="{{ path('veterinarian_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <a href="{{ path('veterinarian_edit', {'id': veterinarian.id}) }}" class="btn btn-success btn-sm">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            {{ include('veterinarian/_delete_form.html.twig') }}
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25 bg-light">ID</th>
                            <td>{{ veterinarian.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Nome</th>
                            <td><strong>{{ veterinarian.name }}</strong></td>
                        </tr>
                        <tr>
                            <th class="bg-light">CRMV</th>
                            <td>{{ veterinarian.crmv }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}