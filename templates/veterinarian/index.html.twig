{% extends 'base.html.twig' %}

{% block title %}Lista de Veterinários{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2"><i class="fas fa-cow me-2"></i>Lista de Veterinários</h1>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_home') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Pagina inicial
                        </a>

                        <a href="{{ path('veterinarian_new') }}" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Adicionar Veterinário
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-nowrap">#ID</th>
                                        <th class="text-nowrap">Nome</th>
                                        <th class="text-nowrap">CRMV</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for veterinarian in veterinarians %}
                                    <tr>
                                        <td>{{ veterinarian.id }}</td>
                                        <td>{{ veterinarian.name }}</td>
                                        <td>{{ veterinarian.crmv }}</td>
                                        <td class="text-end">
                                            <div class="d-flex gap-2 justify-content-center">
                                                <a href="{{ path('veterinarian_show', {'id': veterinarian.id}) }}" class="btn btn-primary btn-sm" title="Visualizar">
                                                    <i class="fas fa-eye"></i> Visualizar
                                                </a>
                                                <a href="{{ path('veterinarian_edit', {'id': veterinarian.id}) }}" class="btn btn-success btn-sm" title="Editar">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                {{ include('veterinarian/_delete_form.html.twig') }}
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-info-circle me-2"></i> Nenhuma veterinario cadastrado
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(veterinarians) }}
            </div>
        </div>
    </div>
{% endblock %}
