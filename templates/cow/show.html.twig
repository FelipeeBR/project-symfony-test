{% extends 'base.html.twig' %}

{% block title %}Animal {{ cow.code }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h2">
            <i class="fas fa-cow me-2"></i>Detalhes animal código: {{ cow.code }}
        </h1>
        <div class="d-flex justify-content-end mb-3 gap-2">
            <a href="{{ path('cow_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <a href="{{ path('cow_edit', {'id': cow.id}) }}" class="btn btn-success btn-sm">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            {{ include('cow/_delete_form.html.twig') }}
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25 bg-light">ID</th>
                            <td>{{ cow.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Código</th>
                            <td><strong>{{ cow.code }}</strong></td>
                        </tr>
                        <tr>
                            <th class="bg-light">Leite (L)</th>
                            <td>{{ cow.milk|number_format(2, ',', '.') }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Ração (kg)</th>
                            <td>{{ cow.food|number_format(2, ',', '.') }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Peso (kg)</th>
                            <td>{{ cow.weight|number_format(2, ',', '.') }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Nascimento</th>
                            <td>{{ cow.birth ? cow.birth|date('d/m/Y') : 'Não informado' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
