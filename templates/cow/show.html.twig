{% extends 'base.html.twig' %}

{% block title %}Gado{% endblock %}

{% block body %}
    <h1>Gado</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cow.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ cow.code }}</td>
            </tr>
            <tr>
                <th>Leite</th>
                <td>{{ cow.milk }}</td>
            </tr>
            <tr>
                <th>Ração</th>
                <td>{{ cow.food }}</td>
            </tr>
            <tr>
                <th>Peso</th>
                <td>{{ cow.weight }}</td>
            </tr>
            <tr>
                <th>Nascimento</th>
                <td>{{ cow.birth ? cow.birth|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cow_index') }}">Voltar</a>

    <a href="{{ path('cow_edit', {'id': cow.id}) }}">Editar</a>

    {{ include('cow/_delete_form.html.twig') }}
{% endblock %}
