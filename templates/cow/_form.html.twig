{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

    <div class="row g-3">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="col-md-6 mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                    
                    {% if field.vars.block_prefixes.1 == 'checkbox' %}
                        <div class="form-check">
                            {{ form_widget(field, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ field.vars.id }}">
                                {{ field.vars.label }}
                            </label>
                        </div>
                    {% else %}
                        {{ form_widget(field, {
                            'attr': {
                                'class': (field.vars.attr.class|default('')) ~ ' form-control' ~ (field.vars.valid ? '' : ' is-invalid')
                            }
                        }) }}
                    {% endif %}
                    
                    <div class="invalid-feedback">
                        {{ form_errors(field) }}
                    </div>
                    
                    {% if field.vars.help is defined and field.vars.help %}
                        <small class="form-text text-muted">{{ field.vars.help }}</small>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-start mt-4">
        <button type="submit" class="btn btn-primary me-md-2 rounded-1">
            <i class="fas fa-save me-1"></i> {{ button_label|default('Salvar') }}
        </button>
    </div>

{{ form_end(form) }}